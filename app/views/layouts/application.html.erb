<!DOCTYPE html>
<html>
<head>
  <title>Ijacek</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="bar">
    <div class="menu">
      <ul class="menu">
        <% if current_user %>
          <li>
            <%= link_to current_user do %>
              <i class="icon-user big"></i>
            <% end %>
          </li>
        <% end %>

        <li><%= link_to people_path do %>
          <i class="icon-group big"></i>
        <% end %></li>

        <li><%= link_to entries_path do %>
          <i class="icon-home big"></i>
        <% end %></li>

        <% if current_user %>
          <li><%= link_to session_path("current"), method: "delete" do %>
            <i class="icon-signout big"></i><% end %>
          </li>

        <% else %>
          <li><%= link_to new_session_path do %>
                <i class="icon-signin big"></i><% end %>
              </li>

      <% end %>
    </ul>
    </div>

  <h1 class="header"> Ijáček </h1>
   <% if current_user %>
    <div class="login_notice">
      Logged in as <%= current_user.username %>. </div>
  <% end %>

  <div class="flash">
    <%= flash[:notice].html_safe if flash.notice %>
  </div>

  <%= yield %>
</div>
<!-- <%= image_tag 'old.gif', class: 'header' %> -->

</body>
</html>
